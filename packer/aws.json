{
  "variables": {
    "vpc_id": "",
    "subnet_id": "",
    "src_ami_owner": "",
    "src_ami_name_prefix": "",
    "app": "ami",
    "ssh_username": "centos",
    "instance_type": "t2.medium"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "ami_name": "ami-build-{{timestamp}}",
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "instance_type": "{{user `instance_type`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "{{ user `src_ami_name_prefix` }}",
          "root-device-type": "ebs"
        },
        "owners": "{{user `src_ami_owner`}}",
        "most_recent": true
      },
      "tags": {
        "Name": "Packer AMI {{user `app`}}"
      },
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "provisioners/ansible/playbook.yaml",
      "ansible_env_vars": [
        "ANSIBLE_NOCOLOR=True"
      ],
      "user": "{{user `ssh_username`}}"
    },
    {
      "type": "file",
      "source": "test",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "script": "scripts/inspec.sh"
    }
  ]
}
